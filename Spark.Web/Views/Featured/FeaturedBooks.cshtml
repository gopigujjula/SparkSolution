@using Glass.Mapper.Sc.Web.Mvc
@model Spark.Web.Models.TemplateModels.IFeaturedBooks

@if (Model != null && Model.FeaturedBooks.Any())
{
    <section class="recomended-sec">
        <div class="container">
            <div class="title">
                <h2>@Html.Glass().Editable(f => f.FeaturedTitle)</h2>
                <hr>
            </div>
            <div class="row">
                @foreach (var book in Model.FeaturedBooks)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="item">
                            @Html.Glass().RenderImage(book, f => f.BookCover, isEditable: true)
                            <h3>@Html.Glass().Editable(book, f => f.Title)</h3>
                            <h6>
                                @*<span class="price">$49</span> /*@
                                <a href="@book.Url">Buy Now</a> @*Dictionary Item*@
                            </h6>
                            <div class="hover">
                                <a href="@book.Url">
                                    <span>
                                        <i class="fa fa-long-arrow-right" aria-hidden="true">
                                        </i>
                                    </span>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}